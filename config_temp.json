
{
    "name": "MLP-temp",
    "n_gpu": 1,

    "arch": {
        "type": "MLP",
        "args": {}
    },
    "data_loader": {
        "type": "KimchiDataLoader",
        "args":{
            "root_dir": "dataset",
            "mode": "train",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "test_data_loader": {
        "type": "KimchiDataLoader",
        "args":{
            "root_dir": "dataset",
            "mode": "test",
            "batch_size": 512,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "valid_data_loader": {
        "type": "KimchiDataLoader",
        "args": {
            "root_dir": "dataset",
            "mode": "val",
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy_"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": true
    }
}
